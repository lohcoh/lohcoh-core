@namespace LowKode.Core.Components
@inject IComponentSite site
@site.RenderWithSite(ChildContent, Init);

@code {
    /// <summary>
    /// The Scope component renders it's child content within a new context.
    /// The Init parameter is required and takes a function that initializes the new context.
    /// </summary>


    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public Action<IComponentSite> Init { get;  set; }

}
