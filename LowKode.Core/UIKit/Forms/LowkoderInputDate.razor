@using LowKode.Core.Metadata
@using Microsoft.AspNetCore.Components.Forms
@namespace LowKode.Core.Components
@inherits LowKode.Core.Components.Input


<Microsoft.AspNetCore.Components.Forms.InputDate id="name" @bind-Value="MemberValue" />

@code {
        object Model;
        MemberPath MemberPath;

        public DateTime MemberValue
        {
            get { return Convert.ToDateTime(MemberPath.Get(Model)); }
            set { MemberPath.Set(Model, value); }
        }


        protected override void OnInitialized()
        {
            base.OnInitialized();

            Model = Site.Context.ComponentSiteSpecification.Model;
            MemberPath = Site.Context.ComponentSiteSpecification.ModelMember;
        }
}