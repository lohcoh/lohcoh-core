@using LowKode.Core.Metadata
@using LowKode.Core.Configuration
@using Microsoft.AspNetCore.Components.Forms
@namespace LowKode.Core.Components
@inject ILowkoderService lowkoder
<Scope @ref="scope">
    <InputDate @bind-Value="MemberValue" />
</Scope>
@code {
    object Model;
    MemberPath MemberPath;
    Scope scope;

    public DateTime MemberValue
    {
        get { return Convert.ToDateTime(MemberPath.Get(Model)); }
        set { MemberPath.Set(Model, value); }
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Model = scope.Site.Context.ComponentSiteSpecification.Model;
        MemberPath = scope.Site.Context.ComponentSiteSpecification.ModelMember;
    }

}