@using LowKode.Core.Metadata
@using LowKode.Core.Context
@using Microsoft.AspNetCore.Components.Forms
@namespace LowKode.Core.Components
<InputNumber @bind-Value="MemberValue" />
@code {
    object Model;
    MemberPath MemberPath;

    [ContextParameter]
    SiteSpecification SiteSpecification { get; set; }

    public int MemberValue
    {
        get { return Convert.ToInt32(MemberPath.Get(Model)); }
        set { MemberPath.Set(Model, value); }
    }

    protected override void OnInitialized()
    {
        Model = SiteSpecification.Model;
        MemberPath = SiteSpecification.ModelMember;
    }

}